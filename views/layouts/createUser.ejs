<div class="container-fluid main-container">
    <div class="row">
        
        <div class="col">


          
          
            <div class="form-Conatiner">
                
                <% if(typeof message !== 'undefined'){ %>
                    <div class="error-message-form"><%= message %></div> 
                    <% } %>
                <form action="http://localhost:3000/user/create" method="post">
                    <label class="label-styles" for="">First Name</label>
                    <input class="custom-input custom-input-padding" type="text" name="fname" maxlength="20" required>
                    <label class="label-styles custom-input-padding" for="">Last Name</label>
                    <input class="custom-input custom-input-padding" type="text" name="lname" maxlength="20" required>
                    <label class="label-styles" for="">Email</label>
                    <input class="custom-input custom-input-padding" type="email" name="email" maxlength="30" required>
                    <label class="label-styles" for="">Password</label>
                    <input class="custom-input custom-input-padding" type="text" name="password" minlength="5" maxlength="20" required>
                    <label class="label-styles"  for="">Confirm Password</label>
                    <input class="custom-input custom-input-padding" type="text" name="passwordConfirm" minlength="5" maxlength="20" required>
                    <label class="label-styles" for="role">Role</label>
                    <select class="custom-input custom-input-padding" name="role" id="role">
                        <option value="Admin">Admin</option>
                        <option value="User" selected>User</option>
                    </select>
                    <label class="label-styles" for="">Title</label>
                    <input class="custom-input custom-input-padding" type="text" name="title" maxlength="20" required>
                    <button class="button-styles" type="submit">Submit</button>
                </form>
                
            </div>















        </div>
    </div>
</div>